{
  "compilerOptions": {
      "target": "es6",
      //Resultado da compilação vai para a pasta app/js
      "outDir": "app/js",
      //Não permite criar o arquivo JS com erro
      "noEmitOnError": true,
      "noImplicitAny": false,
      //remove comentários quando subir para produção
      "removeComments": true,
      "module": "System",
      "strictNullChecks": false,
      "experimentalDecorators": true
  },
  //Qual arquivo ele deve levar em consideração
  //na hora de compilar, ex: app/ts/**/* captura todos arquivos dentro da pasta ts e subpastas
  "include": [
      "app/ts/**/*"
  ]
}